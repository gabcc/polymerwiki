<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:paper='urn:import:com.vaadin.polymer.paper.widget'>
    <g:HTMLPanel>
        <g:HTMLPanel addStyleNames="modal fade" ui:field="modal">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <g:SimplePanel ui:field="modalHeader"></g:SimplePanel>
                    </div>
                    <div class="modal-body">
                        <g:SimplePanel ui:field="modalContent"></g:SimplePanel>
                    </div>
                </div>
            </div>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>